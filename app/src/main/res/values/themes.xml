<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>


    <style name="JetpackSplashTheme" parent="Theme.SplashScreen">
        <!--指定 icon，支持静态 drawable 或动画 vector drawable-->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!--动画 icon 时长-->
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <!--启动画面的背景，默认使用 windowBackground-->
        <item name="windowSplashScreenBackground">@color/purple_200</item>
        <!--启动画面退出后 Activity 的主题-->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>